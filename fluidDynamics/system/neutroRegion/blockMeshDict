{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

//Pi  1;   // test constant

// 2 valid ways of getting the Pi constant in OpenFOAM
Pi  #calc "constant::mathematical::pi";
//Pi  #calc "degToRad(180)";

vertices
(
    (   0   0 -0.1) //0
    ( $Pi   0 -0.1) //1
    ( $Pi $Pi -0.1) //2
    (   0 $Pi -0.1) //3
    (   0   0  0.1) //4
    ( $Pi   0  0.1) //5
    ( $Pi $Pi  0.1) //6
    (   0 $Pi  0.1) //7
);

blocks
(
    hex (0 1 2 3 4 5 6 7) cavity (200 200 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(   
    topWall
    {
        type wall;
        faces
        (
            (3 7 6 2)
        );
    }
    bottomWall
    {
        type wall;
        faces
        (
            (1 5 4 0)
        );
    }
    leftWall
    {
        type wall;
        faces
        (
            (0 4 7 3)
        );
    }
    rightWall
    {
        type wall;
        faces
        (
            (2 6 5 1)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
            (0 3 2 1)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
