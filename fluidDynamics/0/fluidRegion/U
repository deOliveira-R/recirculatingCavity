FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/fluidRegion";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 0 0 0 );

boundaryField
{
    topWall
    {
        type            codedFixedValue;
        value           uniform ( 0 0 0 );
        
        redirectType    negCosProfile;

        codeInclude
        #{
            #include "fvCFD.H"
            #include <cmath>
            #include <iostream>
        #};

        codeOptions
        #{
            -I$(LIB_SRC)/finiteVolume/lnInclude \
            -I$(LIB_SRC)/meshTools/lnInclude
        #};

        code
        #{
            const fvPatch& boundaryPatch = patch(); // Access to mesh information at patch
            const vectorField& Cf = boundaryPatch.Cf(); // Recerence to face centres
            vectorField& field = *this; // Reference to THIS vector field (patch one)

            // scalar t = this->db().time().value(); // Access to time value

            forAll(Cf, faceI)
            {
                field[faceI] = vector(-cos(Cf[faceI].x()), 0, 0);
            }
        #};
    }
    bottomWall
    {
        type            codedFixedValue;
        value           uniform ( 0 0 0 );
        
        redirectType    posCosProfile;

        codeInclude
        #{
            #include "fvCFD.H"
            #include <cmath>
            #include <iostream>
        #};

        codeOptions
        #{
            -I$(LIB_SRC)/finiteVolume/lnInclude \
            -I$(LIB_SRC)/meshTools/lnInclude
        #};

        code
        #{
            const fvPatch& boundaryPatch = patch();
            const vectorField& Cf = boundaryPatch.Cf();
            vectorField& field = *this;

            forAll(Cf, faceI)
            {
                field[faceI] = vector(cos(Cf[faceI].x()), 0, 0);
            }
        #};
    }
    leftWall
    {
        type            codedFixedValue;
        value           uniform ( 0 0 0 );
        
        redirectType    negSinProfile;

        codeInclude
        #{
            #include "fvCFD.H"
            #include <cmath>
            #include <iostream>
        #};

        codeOptions
        #{
            -I$(LIB_SRC)/finiteVolume/lnInclude \
            -I$(LIB_SRC)/meshTools/lnInclude
        #};

        code
        #{
            const fvPatch& boundaryPatch = patch();
            const vectorField& Cf = boundaryPatch.Cf();
            vectorField& field = *this;

            forAll(Cf, faceI)
            {
                field[faceI] = vector(0, -sin(Cf[faceI].y()), 0);
            }
        #};
    }
    rightWall
    {
        type            codedFixedValue;
        value           uniform ( 0 0 0 );
        
        redirectType    posSinProfile;

        codeInclude
        #{
            #include "fvCFD.H"
            #include <cmath>
            #include <iostream>
        #};

        codeOptions
        #{
            -I$(LIB_SRC)/finiteVolume/lnInclude \
            -I$(LIB_SRC)/meshTools/lnInclude
        #};

        code
        #{
            const fvPatch& boundaryPatch = patch();
            const vectorField& Cf = boundaryPatch.Cf();
            vectorField& field = *this;

            forAll(Cf, faceI)
            {
                field[faceI] = vector(0, sin(Cf[faceI].y()), 0);
            }
        #};
    }
    frontAndBack
    {
        type            empty;
    }
}
