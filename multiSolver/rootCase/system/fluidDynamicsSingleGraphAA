Description
    Writes graph data for specified fields along a line, specified by start
    and end points.

\*---------------------------------------------------------------------------*/

start   #codeStream
{
    codeInclude
    #{
        #include "pointField.H"
        #include "solutionDomainSpecifications.H"
    #};

    codeOptions
    #{
        -I$(FOAM_CASE)/system
    #};

    code
    #{
        os << point(xMin, (yMax + yMin)/2, 0);
    #};
};
end     #codeStream
{
    codeInclude
    #{
        #include "pointField.H"
        #include "solutionDomainSpecifications.H"
    #};

    codeOptions
    #{
        -I$(FOAM_CASE)/system
    #};

    code
    #{
        os << point(xMax, (yMax + yMin)/2, 0);
    #};
};
fields  (U mag(U) p T  mag(UA) UA pA TA UErrorAbsolute pErrorAbsolute TErrorAbsolute);

// Sampling and I/O settings
// #includeEtc "caseDicts/postProcessing/graphs/sampleDict.cfg"

interpolationScheme cellPoint;

setFormat   raw;

setConfig
{
    type    lineUniform;   // lineUniform, midPoint, midPointAndFace
    axis    x;  // distance, x, y, z, xyz
    nPoints 100;
}

region cavity;

// Override settings here, e.g.
// setConfig { type midPoint; }

// Must be last entry
#includeEtc "caseDicts/postProcessing/graphs/graph.cfg"

