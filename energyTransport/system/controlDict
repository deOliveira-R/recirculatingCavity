FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// General

application         GeN-Foam;

startFrom           startTime;//latestTime;

startTime           0;

stopAt              endTime;

endTime             250;

deltaT              0.01;

adjustTimeStep      false;

maxDeltaT           1.0;

writeControl        runTime;//adjustableRunTime;

writeInterval       10;

purgeWrite          2;

writeFormat         ascii;

writePrecision      7;

writeCompression    true;

timeFormat          general;

timePrecision       8;

runTimeModifiable   true;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Physics to solve

solveFluidMechanics     false;

solveEnergy             true;

solveNeutronics         true;

solveThermalMechanics   false;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Global simulation options

compr       false;

liquidFuel  true;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Solution control

maxCo               1;

maxPowerVariation   0.025; //max power variation in each time step

