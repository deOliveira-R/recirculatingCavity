FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-7;
        relTol          0.1;
    }

    rhoFinal
    {
        $rho;
        tolerance       1e-7;
        relTol          0;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner  FDIC;
        tolerance       1e-6;
        relTol          0.01;
    }

    p_rghFinal
    {
        $p_rgh;
        tolerance       1e-7;
        relTol          0;
    }

    "(U|h|k|epsilon|R|TStructures)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.01;
    }

    "(U|h|k|epsilon|R|TStructures)Final"
    {
        $U;
        tolerance       1e-7;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor   true;

    nCorrectors                 2;
    nNonOrthogonalCorrectors    0;

    pRefCell    0;
    pRefValue   1.01e5;

    residualControl
    {
        U
        {
            tolerance   1e-5;
            relTol      0;
        }
        p_rgh
        {
            tolerance   5e-4;
            relTol      0;
        }
        h
        {
            tolerance   1e-5;
            relTol      0;
        }
     }
}

relaxationFactors
{
    fields
    {
        // p_rgh           1; Not implemented in GeN-Foam at the moment... I think
        // p_rghFinal      1;
        // "p_rgh.*"       1;
    }
    equations
    {
        "U"             1;
        "h"             1;
        "(U|h)Final"    1;
        // "(U|h).*"       1; No distinction for Final iteration... probably not a good idea.
    }
}

potentialFlow
{
    nNonOrthogonalCorrectors 0;
}

cache
{
    grad(U);
}


