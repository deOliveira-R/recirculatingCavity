FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application         multiSolver;

startFrom           startTime;
//startFrom           latestTime;

startTime           0;

stopAt              endTime;

endTime             50;

deltaT              0.05;

adjustTimeStep      false;

maxDeltaT           1.0;

writeControl        runTime;
//writeControl        adjustableRunTime;

writeInterval       10;

purgeWrite          2;

writeFormat         ascii;

writePrecision      7;

writeCompression    true;

timeFormat          general;

timePrecision       8;

runTimeModifiable   true;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Physics to solve

solveFluidMechanics     true;

solveEnergy             true;

solveNeutronics         true;

solveThermalMechanics   false;

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Solution control

maxCo               1;

maxPowerVariation   0.025; //max power variation in each time step

