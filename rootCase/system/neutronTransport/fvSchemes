FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default none;
    grad((DNeutro&(1,0,0))) Gauss linear;
    grad((DNeutro&(0,1,0))) Gauss linear;
    grad((DNeutro&(0,0,1))) Gauss linear;
}

divSchemes
{
    default none;
    div(phiNeutro,precursor)    Gauss upwind;
}

laplacianSchemes
{
    default none;
    laplacian((D|discFactor),discFlux)      Gauss linear uncorrected;
    laplacian(diffCoeffNeutro,precursor)    Gauss linear uncorrected;
}

interpolationSchemes
{
    default none;//linear;
}

snGradSchemes
{
    default none;//uncorrected;
}

fluxRequired
{
    default false;
}

